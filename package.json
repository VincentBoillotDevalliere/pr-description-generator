{
  "name": "pr-description-generator",
  "displayName": "PR Description Generator",
  "description": "Generate a PR description from staged git changes.",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentdevalliere/pr-description-generator.git"
  },
  "homepage": "https://github.com/vincentdevalliere/pr-description-generator/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/vincentdevalliere/pr-description-generator/issues"
  },
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "activationEvents": [
    "onCommand:prd.generateDescriptionStaged",
    "onCommand:prd.generateDescriptionBase"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prd.generateDescriptionStaged",
        "title": "PRD: Generate PR Description (staged)"
      },
      {
        "command": "prd.generateDescriptionBase",
        "title": "PRD: Generate PR Description (against base branch)"
      }
    ],
    "configuration": {
      "title": "PR Description Generator",
      "properties": {
        "prd.baseBranch": {
          "type": "string",
          "default": "main",
          "description": "Base branch used when generating a PR description against a branch."
        },
        "prd.maxDiffLines": {
          "type": "number",
          "default": 2000,
          "minimum": 1,
          "description": "Maximum number of diff lines to analyze when generating PR description."
        },
        "prd.copyToClipboard": {
          "type": "boolean",
          "default": false,
          "description": "Copy generated PR description to the clipboard."
        },
        "prd.includeFilesSection": {
          "type": "boolean",
          "default": false,
          "description": "Include a 'Files changed' section in the generated Markdown."
        }
      }
    }
  }
}
