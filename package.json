{
  "name": "pr-description-generator",
  "displayName": "PR Description Generator",
  "description": "Generate a PR description from staged git changes.",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentdevalliere/pr-description-generator.git"
  },
  "homepage": "https://github.com/vincentdevalliere/pr-description-generator/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/vincentdevalliere/pr-description-generator/issues"
  },
  "icon": "assets/image.png",
  "version": "0.0.2",
  "publisher": "VincentDevalliere",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "activationEvents": [
    "onCommand:prd.generateDescriptionStaged",
    "onCommand:prd.generateDescriptionBase",
    "onCommand:prd.generateDescriptionAi",
    "onCommand:prd.insertDescriptionHere"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prd.generateDescriptionStaged",
        "title": "PRD: Generate PR Description (staged)"
      },
      {
        "command": "prd.generateDescriptionBase",
        "title": "PRD: Generate PR Description (against base branch)"
      },
      {
        "command": "prd.generateDescriptionAi",
        "title": "PRD: Generate PR Description (AI enhanced)"
      },
      {
        "command": "prd.insertDescriptionHere",
        "title": "PRD: Insert PR Description Here"
      }
    ],
    "configuration": {
      "title": "PR Description Generator",
      "properties": {
        "prd.baseBranch": {
          "type": "string",
          "default": "main",
          "description": "Base branch used when generating a PR description against a branch."
        },
        "prd.maxDiffLines": {
          "type": "number",
          "default": 2000,
          "minimum": 1,
          "description": "Maximum number of diff lines to analyze when generating PR description."
        },
        "prd.copyToClipboard": {
          "type": "boolean",
          "default": false,
          "description": "Copy generated PR description to the clipboard."
        },
        "prd.includeFilesSection": {
          "type": "boolean",
          "default": false,
          "description": "Include a 'Files changed' section in the generated Markdown."
        },
        "prd.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key used for AI-enhanced PR descriptions."
        },
        "prd.ai.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai"
          ],
          "description": "AI provider to use (OpenAI-compatible for now)."
        },
        "prd.ai.endpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "OpenAI-compatible endpoint for AI-enhanced descriptions."
        },
        "prd.ai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model name used for AI-enhanced descriptions."
        },
        "prd.ai.timeoutMs": {
          "type": "number",
          "default": 12000,
          "minimum": 1000,
          "description": "Timeout for AI requests in milliseconds."
        },
        "prd.ai.maxDiffLines": {
          "type": "number",
          "default": 800,
          "minimum": 1,
          "description": "Maximum number of diff lines sent to the AI."
        },
        "prd.ai.maxDiffChars": {
          "type": "number",
          "default": 12000,
          "minimum": 200,
          "description": "Maximum number of diff characters sent to the AI."
        },
        "prd.ai.tone": {
          "type": "string",
          "default": "standard",
          "enum": [
            "concise",
            "standard",
            "detailed"
          ],
          "description": "Tone for AI-enhanced descriptions."
        },
        "prd.ai.previewPrompt": {
          "type": "boolean",
          "default": true,
          "description": "Preview the exact AI prompt in a new tab before the request."
        },
        "prd.ai.redactSensitive": {
          "type": "boolean",
          "default": true,
          "description": "Redact common secrets (tokens, passwords, keys) before sending to AI."
        },
        "prd.ai.redactPatterns": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Custom regex patterns to redact before sending to AI (e.g., \"password\\\\s*=\\\\s*[^\\\\s]+\" or \"/secret\\\\s*=.*/i\")."
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.3"
  }
}
